@{
  Layout = "_Layout";
}
@using Restaurant.Models;
@model List<Restaurant.Models.RestaurantV>;

<h1>Restaurants</h1>

@if(@Model.Count == 0)
{
    <h3> No Restaurants have been added yet which shoud. never be the case</h3>
}
@foreach(RestaurantV restrauntvv in Model)
{
  <ul>
    <li>@Html.ActionLink($"{restrauntvv.Name}", "Details", new { idR = restrauntvv.RestaurantVId}) | @restrauntvv.Cuisine.Name </li>
  </ul>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>