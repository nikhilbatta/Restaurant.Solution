@{
  Layout = "_Layout";
}
@model Restaurant.Models.RestaurantV

<h4>Add a new Restaurant</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.Hours)
    @Html.TextBoxFor(model => model.Hours)

      @Html.LabelFor(model => model.Price)
    @Html.TextBoxFor(model => model.Price)

    @Html.LabelFor(model => model.Location)
    @Html.TextBoxFor(model => model.Location)

    @Html.LabelFor(model => model.CuisineId)
    @Html.DropDownList("CuisineId")
    <input type="submit" value="Add new restaurant" />
}
